<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-2">
    <br>
<h3>Create a New Listing</h3>
<form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
 
 
    <div class="mb-2">
      <label for="title" class="form-label">Enter title</label>
      <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
      <div class="valid-feedback">Title looks good</div>
    </div>
    
    
    <div class="mb-2">
      <label for="description" class="form-label">Enter description</label>
      <textarea name="listing[description]" class="form-control" required></textarea>
      <div class="invalid-feedback">Please enter a short description</div>
    </div>

   <div class="mb-2">
    <label for="image" class="form-label" class="form-control">Upload listing image</label>
    <input name="listing[image]" placeholder="Enter image URL/link" type="file" class="form-control">
   </div>

    
   <div class="row">
   <div class="mb-2 col-md-4">
    <label for="price" class="form-label">Enter price</label>
    <input name="listing[price]" placeholder="1200"  class="form-control" required>
    <div class="invalid-feedback">Price should be valid</div>
   </div>

    <div class="mb-2 col-md-8">
      <label for="country" class="form-label">Enter country</label>
    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
    <div class="invalid-feedback">Country name should be valid</div>
    </div>
  </div>


    <div>
      <label for="location" class="form-label">Enter location</label>
      <input name="listing[location]" placeholder="Lonavala, Manali, Jaipur" type="text" class="form-control" required>
      <div class="invalid-feedback">Location should be valid</div>
    </div>
   
    <br>

  <button class="btn btn-dark mb-2 add-btn" >Add</button>


</form>

</div>
</div>






